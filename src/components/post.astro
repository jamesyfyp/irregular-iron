---
const { title, content, link } = Astro.props;
---

<a class="w-3/4 sm:w-1/2" href={link}>
  <div
    class="h-auto w-3/4 sm:w-1/2 bg-violet-900/50 m-auto mt-4 py-8 px-16 border-2 border-white rounded-xl hover:invert"
  >
    <div class="grid grid-cols-10 gap-8">
      <div class="col-span-2">
        <h1 class="text-white font-bold">{title}</h1>
      </div>
      <div class="col-span-7 line-clamp-3 max-h-16 overflow-hidden">
        <p class="text-sm text-white">{content.test}</p>
        <p class="text-sm text-white">{content?.test2}</p>
      </div>
    </div>
  </div>
</a>
