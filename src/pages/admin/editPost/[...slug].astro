---
import SideNav from "../../../layouts/SideNav.astro";
import PostEditorPage from "../../../components/react/Views/PostEditorPage.jsx"
import { JsonFileLogDriver } from "aws-cdk-lib/aws-ecs";


const { slug } = Astro.params;
const req = await fetch(
  `https://di10dsxzc6.execute-api.us-east-1.amazonaws.com/blogPost/${slug}`
);
const post = await req.json();

let setUpSlug = !slug ? "index" : slug;
---

<SideNav>
  <PostEditorPage post={post} client:load/>
</SideNav>
